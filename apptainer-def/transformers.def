Bootstrap: docker
From: debian:bookworm-slim

%files
    requirements.txt

%post

    export LANG=C.UTF-8 LC_ALL=C.UTF-8

    # Install requirements
    # gcc, g++, python-dev are required for scikit-image
    # python3-venv is required for python environments

    apt-get update -q && \
    apt-get install -q -y --no-install-recommends \
        g++ \
        gcc \
        python3.11 \
        python3.11-dev \
        python3.11-venv \
    && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

    python3 -m venv /venv
    ls /venv
    . /venv/bin/activate
    pip install \
        datasets==2.17.1 \
        optuna==3.5.0 \
        scikit-learn==1.3.2 \
        torch==2.2.1 \
        tensorboard==2.15.1 \
        transformers==4.37.2

%environment
    export LANG=C.UTF-8 LC_ALL=C.UTF-8
    . /venv/bin/activate